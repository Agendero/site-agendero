<!DOCTYPE html>
<html lang="<%= lang %>">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= lang === 'pt' ? 'Empresas' : 'Companies' %></title>
    <link rel="stylesheet" href="/styles.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">
</head>
<body>
    <div class="app-container">
        <%- include('partials/nav') %>
        
        <main class="main-content">
            <div class="companies-container container">
                <div class="row">
                    <div class=" col-md-10 justify-content-between align-items-center">
                        <h2><%= lang === 'pt' ? 'Empresas' : 'Companies' %></h2>
                    
                    </div>
                    <div class="col-md-2 d-flex justify-content-end">
                        <button class="btn btn-primary btn-sm" onclick="openCompanyModal()">
                            <i class="bi bi-plus-lg"></i> <%= lang === 'pt' ? 'Nova Empresa' : 'New Company' %>
                        </button>
                    </div>  
                </div>
                <br>

                <% if (typeof error !== 'undefined') { %>
                    <div class="alert alert-danger" role="alert">
                        <%= error %>
                    </div>
                <% } %>

                <div class="table-responsive">
                    <% if (!companies || companies.length === 0) { %>
                        <div class="alert alert-info">
                            <%= lang === 'pt' ? 'Nenhuma empresa encontrada' : 'No companies found' %>
                        </div>
                    <% } else { %>
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th><%= lang === 'pt' ? 'Nome' : 'Name' %></th>
                                    <th><%= lang === 'pt' ? 'Atividade' : 'Activity' %></th>
                                    <th><%= lang === 'pt' ? 'Responsável' : 'Responsible' %></th>
                                    <th><%= lang === 'pt' ? 'Email' : 'Email' %></th>
                                    <th><%= lang === 'pt' ? 'Telefone' : 'Phone' %></th>
                                    <th><%= lang === 'pt' ? 'Ações' : 'Actions' %></th>
                                </tr>
                            </thead>
                            <tbody id="companiesTableBody">
                                <% companies.forEach(function(company) { %>
                                    <tr>
                                        <td><%= company.name || '-' %></td>
                                        <td><%= company.activity || '-' %></td>
                                        <td><%= company.responsible || '-' %></td>
                                        <td><%= company.email || '-' %></td>
                                        <td><%= company.phoneNumber || '-' %></td>
                                        <td>
                                            <div class="row">
                                                <div class="col-md-3">
                                                    <button class="btn btn-sm btn-primary" onclick="editCompany('<%= company.id %>')" title="<%= lang === 'pt' ? 'Editar' : 'Edit' %>">
                                                        <i class="bi bi-pencil"></i>
                                                    </button>
                                                </div>
                                                <div class="col-md-4">
                                                    <button class="btn btn-sm btn-danger" onclick="deleteCompany('<%= company.id %>')" title="<%= lang === 'pt' ? 'Excluir' : 'Delete' %>">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                </div>
                                            </div>
                                           
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    <% } %>
                </div>
            </div>

            <!-- Modal for Create/Edit -->
            <div class="modal fade" id="companyModal" tabindex="-1">
                <div class="modal-dialog modal-lg">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="modalTitle"></h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                        </div>
                        <div class="modal-body">
                            <form id="companyForm">
                                <input type="hidden" id="companyId">
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <label class="form-label"><%= lang === 'pt' ? 'Nome' : 'Name' %> *</label>
                                        <input type="text" class="form-control" id="name" required>
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label"><%= lang === 'pt' ? 'Atividade' : 'Activity' %> *</label>
                                        <input type="text" class="form-control" id="activity" required>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <label class="form-label"><%= lang === 'pt' ? 'Responsável' : 'Responsible' %> *</label>
                                        <input type="text" class="form-control" id="responsible" required>
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label">Email</label>
                                        <input type="email" class="form-control" id="email">
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <label class="form-label"><%= lang === 'pt' ? 'Telefone' : 'Phone' %></label>
                                        <input type="tel" class="form-control" id="phoneNumber">
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label"><%= lang === 'pt' ? 'Celular' : 'Mobile' %></label>
                                        <input type="tel" class="form-control" id="mobileNumber">
                                    </div>
                                </div>
                                <h5 class="mb-3"><%= lang === 'pt' ? 'Endereço' : 'Address' %></h5>
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <label class="form-label"><%= lang === 'pt' ? 'Rua' : 'Street' %></label>
                                        <input type="text" class="form-control" id="street">
                                    </div>
                                    <div class="col-md-2">
                                        <label class="form-label"><%= lang === 'pt' ? 'Número' : 'Number' %></label>
                                        <input type="text" class="form-control" id="number">
                                    </div>
                                    <div class="col-md-4">
                                        <label class="form-label"><%= lang === 'pt' ? 'Complemento' : 'Additional Info' %></label>
                                        <input type="text" class="form-control" id="additionalInfo">
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-md-4">
                                        <label class="form-label"><%= lang === 'pt' ? 'Cidade' : 'City' %></label>
                                        <input type="text" class="form-control" id="city">
                                    </div>
                                    <div class="col-md-4">
                                        <label class="form-label"><%= lang === 'pt' ? 'Estado' : 'State' %></label>
                                        <input type="text" class="form-control" id="state">
                                    </div>
                                    <div class="col-md-4">
                                        <label class="form-label"><%= lang === 'pt' ? 'CEP' : 'Postal Code' %></label>
                                        <input type="text" class="form-control" id="postalCode">
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <label class="form-label"><%= lang === 'pt' ? 'País' : 'Country' %></label>
                                        <input type="text" class="form-control" id="country">
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label">Logo URL</label>
                                        <input type="text" class="form-control" id="logo">
                                    </div>
                                </div>
                                <div class="mb-3 form-check">
                                    <input type="checkbox" class="form-check-input" id="isActive" checked>
                                    <label class="form-check-label"><%= lang === 'pt' ? 'Ativo' : 'Active' %></label>
                                </div>
                            </form>
                        </div>
                        <div class="modal-footer">
                            <div class="row">
                                <div class="col-md-6">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                        <%= lang === 'pt' ? 'Cancelar' : 'Cancel' %>
                                    </button>
                                </div>
                                <div class="col-md-6">
                                    <button type="button" class="btn btn-primary" onclick="saveCompany()">
                                        <%= lang === 'pt' ? 'Salvar' : 'Save' %>
                                    </button>
                                </div>                             
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Delete Confirmation Modal -->
            <div class="modal fade" id="deleteModal" tabindex="-1">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title"><%= lang === 'pt' ? 'Confirmar Exclusão' : 'Confirm Deletion' %></h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                        </div>
                        <div class="modal-body">
                            <%= lang === 'pt' ? 'Tem certeza que deseja excluir esta empresa?' : 'Are you sure you want to delete this company?' %>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                <%= lang === 'pt' ? 'Cancelar' : 'Cancel' %>
                            </button>
                            <button type="button" class="btn btn-danger" onclick="confirmDelete()">
                                <%= lang === 'pt' ? 'Excluir' : 'Delete' %>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        let currentCompanyId = null;
        const companyModal = new bootstrap.Modal(document.getElementById('companyModal'));
        const deleteModal = new bootstrap.Modal(document.getElementById('deleteModal'));

        // Default headers for all API requests
        const defaultHeaders = {
            'Content-Type': 'application/json'
        };

        async function editCompany(id) {
            try {
                const response = await fetch(`/api/companies/${id}`, {
                    headers: defaultHeaders
                });
                
                if (!response.ok) {
                    const error = await response.json();
                    throw new Error(error.message || `HTTP error! status: ${response.status}`);
                }
                
                const company = await response.json();
                currentCompanyId = company.id;
                
                document.getElementById('name').value = company.name;
                document.getElementById('activity').value = company.activity;
                document.getElementById('responsible').value = company.responsible;
                document.getElementById('email').value = company.email || '';
                document.getElementById('phoneNumber').value = company.phoneNumber || '';
                document.getElementById('mobileNumber').value = company.mobileNumber || '';
                document.getElementById('street').value = company.address?.street || '';
                document.getElementById('number').value = company.address?.number || '';
                document.getElementById('additionalInfo').value = company.address?.additionalInfo || '';
                document.getElementById('city').value = company.address?.city || '';
                document.getElementById('state').value = company.address?.state || '';
                document.getElementById('postalCode').value = company.address?.postalCode || '';
                document.getElementById('country').value = company.address?.country || '';
                document.getElementById('logo').value = company.logo || '';
                document.getElementById('isActive').checked = company.isActive;
                
                document.getElementById('modalTitle').textContent = 
                    '<%= lang === "pt" ? "Editar Empresa" : "Edit Company" %>';
                
                companyModal.show();
            } catch (error) {
                console.error('Error loading company:', error);
                alert('<%= lang === "pt" ? "Erro ao carregar empresa" : "Error loading company" %>: ' + error.message);
            }
        }

        function openCompanyModal() {
            currentCompanyId = null;
            document.getElementById('companyForm').reset();
            document.getElementById('isActive').checked = true;
            document.getElementById('modalTitle').textContent = 
                '<%= lang === "pt" ? "Nova Empresa" : "New Company" %>';
            companyModal.show();
        }

        async function saveCompany() {
            const formData = {
                name: document.getElementById('name').value,
                activity: document.getElementById('activity').value,
                responsible: document.getElementById('responsible').value,
                address: {
                    street: document.getElementById('street').value,
                    city: document.getElementById('city').value,
                    state: document.getElementById('state').value,
                    postalCode: document.getElementById('postalCode').value,
                    country: document.getElementById('country').value,
                    additionalInfo: document.getElementById('additionalInfo').value,
                    number: document.getElementById('number').value
                },
                phoneNumber: document.getElementById('phoneNumber').value,
                mobileNumber: document.getElementById('mobileNumber').value,
                email: document.getElementById('email').value,
                logo: document.getElementById('logo').value,
                isActive: document.getElementById('isActive').checked,
                registrationDate: new Date().toISOString()
            };

            try {
                const url = currentCompanyId ? 
                    `/api/companies/${currentCompanyId}` : 
                    '/api/companies';
                const method = currentCompanyId ? 'PUT' : 'POST';
                
                const response = await fetch(url, {
                    method,
                    headers: defaultHeaders,
                    body: JSON.stringify(formData)
                });

                if (!response.ok) {
                    const error = await response.json();
                    throw new Error(error.message || `HTTP error! status: ${response.status}`);
                }

                companyModal.hide();
                window.location.reload();
            } catch (error) {
                console.error('Error saving company:', error);
                alert('<%= lang === "pt" ? "Erro ao salvar empresa" : "Error saving company" %>: ' + error.message);
            }
        }

        function deleteCompany(id) {
            currentCompanyId = id;
            deleteModal.show();
        }

        async function confirmDelete() {
            try {
                const response = await fetch(`/api/companies/${currentCompanyId}`, {
                    method: 'DELETE',
                    headers: defaultHeaders
                });

                if (!response.ok) {
                    const error = await response.json();
                    throw new Error(error.message || `HTTP error! status: ${response.status}`);
                }

                deleteModal.hide();
                window.location.reload();
            } catch (error) {
                console.error('Error deleting company:', error);
                alert('<%= lang === "pt" ? "Erro ao excluir empresa" : "Error deleting company" %>: ' + error.message);
            }
        }
    </script>
</body>
</html>
