<!DOCTYPE html>
<html lang="<%= i18n.language %>">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= t('companies.title') %></title>
    <link rel="stylesheet" href="/styles.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">
    <style>
        .app-container {
            min-height: 100vh;
            background-image: url('/images/fundo.jpg');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            position: relative;
        }

        .app-container::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(0, 0, 0, 0.5);
            z-index: 1;
        }

        .main-nav, .main-content {
            position: relative;
            z-index: 2;
        }

        .main-content {
            background: rgba(255, 255, 255, 0.95);
            border-radius: 10px;
            margin: 20px;
            padding: 20px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }
    </style>
</head>
<body>
    <div class="app-container">
        <%- include('partials/nav') %>
        
        <main class="main-content">
            <div class="companies-container container">
                <div class="row">
                    <div class="col-md-10 justify-content-between align-items-center tituloPage">
                        <%= t('companies.title') %>                    
                    </div>
                    <div class="col-md-2 d-flex justify-content-end">
                        <button class="btn btn-primary btn-sm" onclick="openCompanyModal()">
                            <i class="bi bi-plus-lg"></i> <%= t('companies.add') %>
                        </button>
                    </div>  
                </div>
                <br>

                <% if (typeof error !== 'undefined') { %>
                    <div class="alert alert-danger" role="alert">
                        <%= error %>
                    </div>
                <% } %>

                <div class="table-responsive">
                    <% if (!companies || companies.length === 0) { %>
                        <div class="alert alert-info">
                            <%= t('companies.noCompaniesFound') %>
                        </div>
                    <% } else { %>
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th><%= t('companies.name') %></th>
                                    <th><%= t('companies.activity') %></th>
                                    <th><%= t('companies.responsible') %></th>
                                    <th><%= t('companies.email') %></th>
                                    <th><%= t('companies.mobile') %></th>
                                    <th><%= t('common.actions') %></th>
                                </tr>
                            </thead>
                            <tbody id="companiesTableBody">
                                <% companies.forEach(function(company) { %>
                                    <tr>
                                        <td data-label="<%= t('companies.name') %>"><%= company.name || '-' %></td>
                                        <td data-label="<%= t('companies.activity') %>"><%= company.activity || '-' %></td>
                                        <td data-label="<%= t('companies.responsible') %>"><%= company.responsible || '-' %></td>
                                        <td data-label="<%= t('companies.email') %>"><%= company.email || '-' %></td>
                                        <td data-label="<%= t('companies.mobile') %>"><%= company.mobileNumber ? formatPhoneNumber(company.mobileNumber) : '-' %></td>
                                        <td data-label="<%= t('common.actions') %>">
                                            <div class="row g-2">
                                                <div class="col-6">
                                                    <button class="btn btn-sm btn-primary w-100" onclick="editCompany('<%= company.id %>')" title="<%= t('common.edit') %>">
                                                        <i class="bi bi-pencil"></i>
                                                    </button>
                                                </div>
                                                <div class="col-6">
                                                    <button class="btn btn-sm btn-danger w-100" onclick="deleteCompany('<%= company.id %>')" title="<%= t('common.delete') %>">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    <% } %>
                </div>
            </div>

            <!-- Modal for Create/Edit -->
            <div class="modal fade" id="companyModal" tabindex="-1">
                <div class="modal-dialog modal-lg">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="modalTitle"></h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                        </div>
                        <div class="modal-body">
                            <form id="companyForm">
                                <input type="hidden" id="companyId">
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <label class="form-label"><%= t('companies.name') %> *</label>
                                        <input type="text" class="form-control" id="name" required>
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label"><%= t('companies.activity') %> *</label>
                                        <input type="text" class="form-control" id="activity" required>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <label class="form-label"><%= t('companies.responsible') %> *</label>
                                        <input type="text" class="form-control" id="responsible" required>
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label"><%= t('companies.email') %></label>
                                        <input type="email" class="form-control" id="email">
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <label class="form-label"><%= t('companies.phone') %></label>
                                        <input type="tel" class="form-control" id="phoneNumber">
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label"><%= t('companies.mobile') %></label>
                                        <input type="tel" class="form-control" id="mobileNumber">
                                    </div>
                                </div>
                                
                                <h5 class="mb-3"><%= t('companies.address') %></h5>
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <label class="form-label"><%= t('companies.street') %></label>
                                        <input type="text" class="form-control" id="street">
                                    </div>
                                    <div class="col-md-2">
                                        <label class="form-label"><%= t('companies.number') %></label>
                                        <input type="text" class="form-control" id="number">
                                    </div>
                                    <div class="col-md-4">
                                        <label class="form-label"><%= t('companies.additionalInfo') %></label>
                                        <input type="text" class="form-control" id="additionalInfo">
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-md-4">
                                        <label class="form-label"><%= t('companies.city') %></label>
                                        <input type="text" class="form-control" id="city">
                                    </div>
                                    <div class="col-md-4">
                                        <label class="form-label"><%= t('companies.state') %></label>
                                        <select class="form-select" id="state">
                                            <option value=""><%= t('common.select') %></option>
                                        </select>
                                    </div>
                                    <div class="col-md-4">
                                        <label class="form-label"><%= t('companies.postalCode') %></label>
                                        <input type="text" class="form-control" id="postalCode">
                                    </div>
                                </div>
                               
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <label class="form-label w-100"><%= t('companies.country') %></label>
                                        <input type="text" class="form-control w-100" id="country">
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label w-100"><%= t('companies.logo') %></label>
                                        <input type="text" class="form-control w-100 h-50" id="logo">
                                    </div>
                                </div>

                                <div class="mb-3 form-check">
                                    <input type="checkbox" class="form-check-input" id="isActive" checked>
                                    <label class="form-check-label"><%= t('companies.isActive') %></label>
                                </div>
                            </form>
                        </div>
                        <div class="modal-footer">
                            <div class="d-flex gap-2">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                    <%= t('common.cancel') %>
                                </button>
                                <button type="button" class="btn btn-primary" onclick="saveCompany()">
                                    <%= t('common.save') %>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Delete Confirmation Modal -->
            <div class="modal fade" id="deleteModal" tabindex="-1">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title"><%= t('common.confirmDeletion') %></h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                        </div>
                        <div class="modal-body">
                            <%= t('common.confirmDeletionMessage') %>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                <%= t('common.cancel') %>
                            </button>
                            <button type="button" class="btn btn-danger" onclick="confirmDelete()">
                                <%= t('common.delete') %>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://unpkg.com/imask"></script>
    <script>
        // Variáveis globais
        let phoneNumberMask;
        let mobileNumberMask;
        let postalCodeMask;
        let companyModal;

        // Inicialização quando o documento estiver pronto
        document.addEventListener('DOMContentLoaded', function() {
            // Inicializa as máscaras
            phoneNumberMask = IMask(document.getElementById('phoneNumber'), {
                mask: '(00) 0000-0000'
            });
            
            mobileNumberMask = IMask(document.getElementById('mobileNumber'), {
                mask: '(00) 00000-0000'
            });
            
            postalCodeMask = IMask(document.getElementById('postalCode'), {
                mask: '00000-000'
            });

            // Inicializa o modal
            companyModal = new bootstrap.Modal(document.getElementById('companyModal'));

            // Carrega os estados
            loadStates();
        });

        async function loadStates() {
            try {
                const response = await fetch('/api/states');
                const data = await response.json();
                const stateSelect = document.getElementById('state');
                
                // Limpa as opções existentes exceto a primeira (placeholder)
                while (stateSelect.options.length > 1) {
                    stateSelect.remove(1);
                }
                
                // Adiciona as novas opções
                data.states.forEach(state => {
                    const option = new Option(`${state.code} - ${state.name}`, state.code);
                    stateSelect.add(option);
                });
            } catch (error) {
                console.error('Erro ao carregar estados:', error);
                alert('<%= t('common.errorLoadingStates') %>');
            }
        }

        // Função para formatar número de telefone
        function formatPhoneNumber(number) {
            if (!number) return '';
            const cleaned = number.replace(/\D/g, '');
            if (cleaned.length === 11) {
                return `(${cleaned.substring(0, 2)}) ${cleaned.substring(2, 7)}-${cleaned.substring(7)}`;
            }
            return `(${cleaned.substring(0, 2)}) ${cleaned.substring(2, 6)}-${cleaned.substring(6)}`;
        }

        async function editCompany(id) {
            try {
                const response = await fetch(`/api/companies/${id}`);
                const company = await response.json();
                
                document.getElementById('companyId').value = company.id;
                document.getElementById('name').value = company.name || '';
                document.getElementById('activity').value = company.activity || '';
                document.getElementById('responsible').value = company.responsible || '';
                document.getElementById('email').value = company.email || '';
                
                // Atualiza os campos com máscara
                phoneNumberMask.value = company.phoneNumber || '';
                mobileNumberMask.value = company.mobileNumber || '';
                
                // Campos de endereço
                document.getElementById('street').value = company.address?.street || '';
                document.getElementById('number').value = company.address?.number || '';
                document.getElementById('additionalInfo').value = company.address?.additionalInfo || '';
                document.getElementById('city').value = company.address?.city || '';
                postalCodeMask.value = company.address?.postalCode || '';
                document.getElementById('country').value = company.address?.country || '';
                document.getElementById('logo').value = company.logo || '';
                document.getElementById('isActive').checked = company.isActive;
                
                // Carrega os estados e depois seleciona o valor correto
                await loadStates();
                document.getElementById('state').value = company.address?.state || '';
                
                document.getElementById('modalTitle').textContent = '<%= t('common.edit') %>';
                companyModal.show();
            } catch (error) {
                console.error('Erro ao carregar empresa:', error);
                alert('<%= t('common.errorLoadingCompany') %>: ' + error.message);
            }
        }

        async function saveCompany() {
            // Remove a máscara para obter apenas os números
            const mobileNumber = mobileNumberMask.unmaskedValue;
            const postalCode = postalCodeMask.unmaskedValue;
            
            const formData = {
                name: document.getElementById('name').value,
                activity: document.getElementById('activity').value,
                responsible: document.getElementById('responsible').value,
                address: {
                    street: document.getElementById('street').value,
                    city: document.getElementById('city').value,
                    state: document.getElementById('state').value,
                    postalCode: postalCode,
                    country: document.getElementById('country').value,
                    additionalInfo: document.getElementById('additionalInfo').value,
                    number: document.getElementById('number').value
                },
                phoneNumber: document.getElementById('phoneNumber').value,
                mobileNumber: mobileNumber,
                email: document.getElementById('email').value,
                logo: document.getElementById('logo').value,
                isActive: document.getElementById('isActive').checked,
                registrationDate: new Date().toISOString()
            };

            try {
                const url = currentCompanyId ? 
                    `/api/companies/${currentCompanyId}` : 
                    '/api/companies';
                const method = currentCompanyId ? 'PUT' : 'POST';
                
                const response = await fetch(url, {
                    method,
                    headers: defaultHeaders,
                    body: JSON.stringify(formData)
                });

                if (!response.ok) {
                    const error = await response.json();
                    throw new Error(error.message || `Erro HTTP! status: ${response.status}`);
                }

                const savedData = await response.json();
                companyModal.hide();
                window.location.reload();
            } catch (error) {
                console.error('Error saving company:', error);
                alert('<%= t('common.errorSavingCompany') %>: ' + error.message);
            }
        }

        function deleteCompany(id) {
            currentCompanyId = id;
            deleteModal.show();
        }

        async function confirmDelete() {
            try {
                const response = await fetch(`/api/companies/${currentCompanyId}`, {
                    method: 'DELETE',
                    headers: defaultHeaders
                });

                if (!response.ok) {
                    const error = await response.json();
                    throw new Error(error.message || `HTTP error! status: ${response.status}`);
                }

                deleteModal.hide();
                window.location.reload();
            } catch (error) {
                console.error('Error deleting company:', error);
                alert('<%= t('common.errorDeletingCompany') %>: ' + error.message);
            }
        }
    </script>
</body>
</html>
